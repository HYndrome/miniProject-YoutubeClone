extends base.pug

block content
  h4 Update the video
  form(method="POST")
    input(name="title", type="text", required, placeholder="Title", maxlength=80 value=video.title)
    input(name="description", type="text", required, placeholder="Description", minlength=20 value=video.description)
    input(name="hashtags", type="text", required, placeholder="HashTags, seperated by comma" value=video.hashtags.join())
    input(type="submit" value="Sumit")
